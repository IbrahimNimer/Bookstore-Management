@model BookstoreManagement.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Book</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div class="border p-4 rounded bg-light shadow mx-auto" style="max-width: 600px;">
    <h4 class="text-muted">Book Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Genre)
        </dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        <span class="mx-2">|</span>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
